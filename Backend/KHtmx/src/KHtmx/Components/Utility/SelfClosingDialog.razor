<dialog id="@Id">
    @ChildContent
    
    @* TODO: Figure out how to get hx-on:load (or something like it) to work instead of this hacky-feeling solution *@

    <script type="module">
        const dialog = document.querySelector("#@Id");
        dialog.showModal();
        
        dialog.addEventListener("close", () => {
            dialog.remove();
        });
    </script>
</dialog>

@code {

    [Parameter, EditorRequired]
    public string? Id { get; init; }

    [Parameter]
    public RenderFragment? ChildContent { get; init; }
}